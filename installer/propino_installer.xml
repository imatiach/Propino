    </componentList>
    <postInstallationActionList>
        <deleteFile>
            <abortOnError>0</abortOnError>
            <path>${project.rollbackBackupDirectory}</path>
            <showMessageOnError>0</showMessageOnError>
        </deleteFile>
    </postInstallationActionList>
    <allowAddRemoveComponents>1</allowAddRemoveComponents>
    <allowComponentSelection>1</allowComponentSelection>
    <componentsDirectory>.</componentsDirectory>
    <componentsUrl>http://www.propino.org/downloads/installer/components</componentsUrl>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <disableSplashScreen>1</disableSplashScreen>
    <enableRollback>1</enableRollback>
    <enableTimestamp>0</enableTimestamp>
