                    <description>Propino-ICONS</description>
                    <destination>${installdir}/ide/icons</destination>
                    <name>propino_icons_windows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../icons/source_c/source_c.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../icons/source_cpp/source_cpp.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../icons/source_h/source_h.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../icons/source_s/source_s.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../icons/propino_logo.ico</origin>
