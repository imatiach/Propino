                        </platformTest>
                    </ruleList>
                </removeWindowsFileAssociation>
            </preUninstallationActionList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Launch Propino</comment>
                    <name>Propino</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/ide/bin/propino.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Uninstall Propino</comment>
                    <name>Uninstall</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
                <startMenuLinkShortcut>
                    <comment>Propino Website</comment>
                    <name>Website</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <url>www.propino.org</url>
                    <windowsIcon>${installdir}/ide/icons/propino_logo.ico</windowsIcon>
                </startMenuLinkShortcut>
            </startMenuShortcutList>
        </component>
        <componentGroup>
            <name>tools</name>
            <description>Tools</description>
            <canBeEdited>1</canBeEdited>
            <detailedDescription>Tool Chains</detailedDescription>
            <downloadable>1</downloadable>
            <selected>1</selected>
            <show>1</show>
            <componentList>
                <component>
                    <name>cmake</name>
                    <description>CMake</description>
                    <canBeEdited>1</canBeEdited>
                    <detailedDescription>CMake Build System</detailedDescription>
                    <downloadable>1</downloadable>
                    <selected>1</selected>
                    <show>1</show>
                    <folderList>
                        <folder>
                            <description>Tools-CMake</description>
                            <destination>${installdir}/tools/cmake</destination>
                            <name>tools_cmake_windows</name>
                            <platforms>windows</platforms>
                            <distributionFileList>
                                <distributionDirectory>
                                    <allowWildcards>1</allowWildcards>
