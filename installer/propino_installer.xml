            </folderList>
            <postInstallationActionList>
                <associateWindowsFileExtension>
                    <extensions>.c</extensions>
                    <friendlyName>Propino C File Extension</friendlyName>
                    <icon>${installdir}\ide\icons\source_c.ico</icon>
                    <mimeType>text/c</mimeType>
                    <progID>propino.propino</progID>
                    <commandList>
                        <command>
                            <makeDefault>0</makeDefault>
                            <runProgram>${installdir}\ide\bin\propino.exe</runProgram>
                            <runProgramArguments>"%1"</runProgramArguments>
                            <verb>Open</verb>
                        </command>
                    </commandList>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </associateWindowsFileExtension>
                <associateWindowsFileExtension>
                    <extensions>.cpp</extensions>
                    <friendlyName>Propino CPP File Extension</friendlyName>
                    <icon>${installdir}\ide\icons\source_cpp.ico</icon>
                    <mimeType>text/cpp</mimeType>
                    <progID>propino.propino</progID>
                    <commandList>
                        <command>
                            <makeDefault>0</makeDefault>
