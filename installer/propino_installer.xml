                        </command>
                    </commandList>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </associateWindowsFileExtension>
                <associateWindowsFileExtension>
                    <extensions>.h</extensions>
                    <friendlyName>Propino H File Extension</friendlyName>
                    <icon>${installdir}\ide\icons\source_h.ico</icon>
                    <mimeType>text/h</mimeType>
                    <progID>propino.propino</progID>
                    <commandList>
                        <command>
                            <makeDefault>0</makeDefault>
                            <runProgram>${installdir}\ide\bin\propino.exe</runProgram>
                            <runProgramArguments>"%1"</runProgramArguments>
                            <verb>Open</verb>
                        </command>
                    </commandList>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </associateWindowsFileExtension>
                <associateWindowsFileExtension>
                    <extensions>.s</extensions>
                    <friendlyName>Propino S File Extension</friendlyName>
                    <icon>${installdir}\ide\icons\source_s.ico</icon>
                    <mimeType>text/s</mimeType>
                    <progID>propino.propino</progID>
                    <commandList>
                        <command>
                            <makeDefault>0</makeDefault>
                            <runProgram>${installdir}\ide\bin\propino.exe</runProgram>
                            <runProgramArguments>"%1"</runProgramArguments>
                            <verb>Open</verb>
                        </command>
                    </commandList>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </associateWindowsFileExtension>
            </postInstallationActionList>
            <preUninstallationActionList>
                <removeWindowsFileAssociation>
                    <extensions>.c</extensions>
                    <mimeType>text/c</mimeType>
                    <progID>propino.propino</progID>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </removeWindowsFileAssociation>
                <removeWindowsFileAssociation>
                    <extensions>.cpp</extensions>
                    <mimeType>text/cpp</mimeType>
                    <progID>propino.propino</progID>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </removeWindowsFileAssociation>
                <removeWindowsFileAssociation>
                    <extensions>.h</extensions>
                    <mimeType>text/h</mimeType>
                    <progID>propino.propino</progID>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </removeWindowsFileAssociation>
                <removeWindowsFileAssociation>
                    <extensions>.s</extensions>
                    <mimeType>text/s</mimeType>
                    <progID>propino.propino</progID>
                    <ruleList>
                        <platformTest>
